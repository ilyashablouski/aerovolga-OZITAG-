<div class="section section--background">
  <div class="container">

    <div class="design__content js-double-slider">
      <div class="color__slider">
        <div class="swiper-container js-double-slider__row">
          <div class="swiper-wrapper">
            {{#times 5}}
              <div class="swiper-slide design__slide">
                <div class="design__slide-image">
                </div>
              </div>
            {{/times}}
          </div>
        </div>
      </div>

      <div class="color__thumbs">
        <div class="swiper-container js-double-slider__thumbs">
          <div class="swiper-wrapper">
            {{#times 5}}
              <div class="swiper-slide color__thumbs-slide">
                <div class="color__thumbs-image">
                  {{>components/image ext='png' img="aircrafts/single/color_1"}}
                </div>
              </div>
            {{/times}}
          </div>
          <button class="thumbs-slide__next"></button>
          <button class="thumbs-slide__prev"></button>
        </div>
      </div>
    </div>
  </div>
</div>
