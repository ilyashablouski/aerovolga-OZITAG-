<div class="home-section">
  <div class="home-section__background">
    {{>components/image ext="png" img="home/online-service-bg"}}
  </div>
  <div class="home-section__inner">
    <div class="home-section__container--small">
      <div class="home-section__top">
        <h2 class="home-section__title">Online service</h2>
      </div>
      <div class="home-section__content">
        <div class="online-service">
          <div class="online-service__top">
            <span class="online-service__title">Features</span>
          </div>
          <div class="online-service__middle">
            <ul class="list list--tick">
              <li class="list__item">Watch over the technical condition of the aircraft</li>
              <li class="list__item">Reporting: works, number of raids</li>
              <li class="list__item">Service Bulletin</li>
              <li class="list__item">Technical support</li>
            </ul>
          </div>
          <div class="online-service__bottom">
            {{>ui/btn button=true color="outline" label="Customer support"}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
