{{#> popups/_base title="Base popup" id="example"}}
  <div class="popup-content__container">
    <div class="popup-content__top">
      <div class="popup-content__title"></div>
    </div>
    <div class="popup-content__bottom">
      <div class="popup-content__form popup-form">
        <div class="popup-form__row">
          <div class="popup-form__col">
            {{> form/input label="Name" placeholder="Подсказка"}}
          </div>
          <div class="popup-form__col">
            {{> form/input label="Surname" placeholder="Подсказка"}}
          </div>
        </div>
        <div class="popup-form__row">
          <div class="popup-form__col">
            {{> form/input label="Phone" placeholder="Подсказка"}}
          </div>
          <div class="popup-form__col">
            {{> form/input label="Email" placeholder="Подсказка"}}
          </div>
        </div>
        <div class="popup-form__row">
            {{> form/input label="Message" placeholder="Подсказка"}}
        </div>
        <div class="popup-form__bottom">
        </div>
      </div>
    </div>
  </div>
{{/ popups/_base}}
