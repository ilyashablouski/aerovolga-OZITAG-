<div class="hero {{#if hero-small}}hero--small{{/if}}">
  <div class="hero__background js-image-loading">
    {{> components/image
      img=img
      ext=ext
    }}
  </div>
  <div class="hero__inner">
    <div class="container">
      <div class="hero__content">
        {{>blocks/page-breadcrumbs label=label href=href}}

        {{#if span}}
          <span class="hero__title">{{title}}</span>
        {{else}}
          <h1 class="hero__title">{{title}}</h1>
        {{/if}}

        {{#if btn}}
          <div class="hero__btn-wrapper">
            {{>ui/btn button=true label="Feedback form" color="white" popup=popup}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
