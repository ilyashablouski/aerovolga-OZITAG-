    {{> components/image
      img=img
      ext=ext
    }}
  </div>
  <div class="hero__inner">
    <div class="container">
      <div class="hero__content">
        <h1 class="hero__title">{{title}}</h1>
      </div>
    </div>
  </div>
</div>
