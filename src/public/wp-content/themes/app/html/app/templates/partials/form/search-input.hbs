<div class="search-input">
  <label class="search-input__label">
    <input autocomplete="off" placeholder="Enter your search query" type="{{#if type}}{{type}}{{else}}text{{/if}}" {{#if value}}value="{{value}}"{{/if}}
           class="search-input__input" />
  </label>

  {{#if message}}<div class="search-input__message">{{message}} <span>{{search-value}}</span></div>{{/if}}
</div>

